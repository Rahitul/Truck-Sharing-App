<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="1dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="10dp"
    android:id="@+id/cardViewComments">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarIVabout_driver_comments"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/avatar">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/nameTVabout_driver_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avatarIVabout_driver_comments"
            android:fontFamily="@font/liadornoirritbold"
            android:text="Rahitul"
            android:textColor="@color/primary"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/commentTVabout_driver_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameTVabout_driver_comments"
            android:layout_toEndOf="@id/avatarIVabout_driver_comments"
            android:fontFamily="@font/liadornoirritregular"
            android:text="This is the comment"
            android:textColor="#000">

        </TextView>

        <TextView
            android:id="@+id/timeTVabout_driver_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/commentTVabout_driver_comments"
            android:layout_toEndOf="@id/avatarIVabout_driver_comments">

        </TextView>

        <LinearLayout
            android:id="@+id/linearabout_driver_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeTVabout_driver_comments"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/avatarIVabout_driver_comments"
            android:orientation="horizontal"
            android:weightSum="2">

        </LinearLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>