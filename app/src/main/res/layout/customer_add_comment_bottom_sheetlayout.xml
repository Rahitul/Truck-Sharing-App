<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_clear_primary_24"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp">

        </ImageView>

        <TextView
            android:id="@+id/choosetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="কমেন্ট করুন"
            android:textColor="@color/primary"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:fontFamily="@font/liadornoirritregular"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"/>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="টাকা নিয়ে কমেন্ট করার জন্য দুই টি বক্স সিলেক্ট করুন"
        android:fontFamily="@font/liadornoirritregular"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp">

    </TextView>

    <LinearLayout
        android:id="@+id/layoutEdit"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center">


        <Spinner
            android:id="@+id/first_spinner"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_24">

        </ImageView>

        <Spinner
            android:id="@+id/second_spinner"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/border"/>


    </LinearLayout>

    <View
        android:id="@+id/driverSectionView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/background"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

    </View>

    <TextView
        android:id="@+id/driverSectionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/liadornoirritregular"
        android:text="ড্রাইভার সেকশান (কাস্টমার এর জন্য অপশনাল)"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="10dp">

    </TextView>

    <Spinner
        android:id="@+id/spinnerVehicleModel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">


        <TextView
            android:id="@+id/commentWithMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="টাকা ও গাড়ির মডেল নিয়ে বিড করুন"
            android:padding="8dp"
            android:gravity="center"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

        </TextView>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/background"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

    </View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="হ্যা অথবা না কমেন্ট করার জন্য যে কোনো একটি সিলেক্ট করুন"
        android:fontFamily="@font/liadornoirritregular"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp">

    </TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/yesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="হ্যা"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/rounded_border">

        </TextView>

        <TextView
            android:id="@+id/noButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="না"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/rounded_border"
            android:layout_marginLeft="10dp">

        </TextView>

    </LinearLayout>








</LinearLayout>