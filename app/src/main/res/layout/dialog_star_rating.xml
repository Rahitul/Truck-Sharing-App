<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardView"
    app:cardUseCompatPadding="true"
    android:padding="5dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ড্রাইভার কে রেটিং দিন"
            android:fontFamily="@font/liadornoirritbold"
            android:textColor="@color/primary">

        </TextView>

        <RatingBar
            android:id="@+id/dialog_rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

        </RatingBar>

        <TextView
            android:id="@+id/dialog_tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.5"
            android:fontFamily="@font/liadornoirritbold"
            android:textSize="20dp"
            android:layout_marginBottom="20dp">

        </TextView>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/liadornoirritregular"
            android:text="ড্রাইভার সম্পর্কে কিছু বলুন"
            android:textColor="@color/primary">

        </TextView>


        <EditText
            android:id="@+id/aboutDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:fontFamily="@font/liadornoirritregular"
            android:hint="উদাঃ খুব ভাল ব্যবহার"
            android:importantForAutofill="no"
            android:textColorHint="#A8A8A8"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/submit_rating"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/liadornoirritbold"
            android:text="শেষ করুন"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:padding="10dp"
            android:gravity="center">

        </TextView>




    </LinearLayout>


</androidx.cardview.widget.CardView>